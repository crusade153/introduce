    <script>
        // âš ï¸ Apps Script ë°°í¬ í›„ ì—¬ê¸°ì— Web App URLì„ ì…ë ¥í•˜ì„¸ìš”
        const API_URL = 'YOUR_GOOGLE_APPS_SCRIPT_WEB_APP_URL';

        // ë°ì´í„° ë¡œë“œ
        async function loadData(sheet) {
            try {
                const response = await fetch(`${API_URL}?sheet=${sheet}`);
                return await response.json();
            } catch (error) {
                console.error(`${sheet} ë¡œë“œ ì‹¤íŒ¨:`, error);
                return null;
            }
        }

        // í”„ë¡œí•„ í‘œì‹œ
        async function displayProfile() {
            const data = await loadData('profile');
            if (!data) return;

            document.getElementById('profile-name').textContent = data.name;
            document.getElementById('profile-title').textContent = data.title;
            document.getElementById('profile-intro').textContent = data.intro;

            document.getElementById('contact-info').innerHTML = `
                <div>ğŸ“§ ${data.email}</div>
                <div>ğŸ“± ${data.phone}</div>
            `;

            const skillsHtml = data.skills.map(skill => 
                `<span class="skill-tag">${skill.trim()}</span>`
            ).join('');
            document.getElementById('skills').innerHTML = skillsHtml;
        }

        // ê²½ë ¥ í‘œì‹œ
        async function displayExperience() {
            const data = await loadData('experience');
            if (!data || data.length === 0) {
                document.getElementById('experience-list').innerHTML = '<p>ê²½ë ¥ ì •ë³´ê°€ ì—†ìŠµë‹ˆë‹¤.</p>';
                return;
            }

            const html = data.map(item => `
                <div class="experience-item">
                    <h3>${item.company} - ${item.position}</h3>
                    <div class="period">${item.period}</div>
                    <p>${item.description}</p>
                </div>
            `).join('');

            document.getElementById('experience-list').innerHTML = html;
        }

        // ê²Œì‹œíŒ í‘œì‹œ
        async function displayBoard() {
            const data = await loadData('board');
            if (!data || data.length === 0) {
                document.getElementById('board-list').innerHTML = '<p>ê²Œì‹œë¬¼ì´ ì—†ìŠµë‹ˆë‹¤.</p>';
                return;
            }

            const html = data.map(item => `
                <div class="board-item">
                    <h3>${item.title}</h3>
                    <p>${item.content}</p>
                    <div class="board-meta">${item.date} | ${item.author}</div>
                </div>
            `).join('');

            document.getElementById('board-list').innerHTML = html;
        }

        // ì—°ë½ í¼ ì œì¶œ
        document.getElementById('contact-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                message: document.getElementById('message').value
            };

            const messageDiv = document.getElementById('form-message');
            const button = e.target.querySelector('button');
            button.disabled = true;
            button.textContent = 'ì „ì†¡ ì¤‘...';

            try {
                const response = await fetch(API_URL, {
                    method: 'POST',
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    messageDiv.className = 'message success';
                    messageDiv.textContent = 'âœ… ' + result.message;
                    messageDiv.style.display = 'block';
                    e.target.reset();
                } else {
                    throw new Error(result.error || 'ì „ì†¡ ì‹¤íŒ¨');
                }
            } catch (error) {
                messageDiv.className = 'message error';
                messageDiv.textContent = 'âŒ ì „ì†¡ ì‹¤íŒ¨: ' + error.message;
                messageDiv.style.display = 'block';
            } finally {
                button.disabled = false;
                button.textContent = 'ì „ì†¡í•˜ê¸°';
                setTimeout(() => {
                    messageDiv.style.display = 'none';
                }, 5000);
            }
        });

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ë°ì´í„° ë¶ˆëŸ¬ì˜¤ê¸°
        window.addEventListener('DOMContentLoaded', () => {
            displayProfile();
            displayExperience();
            displayBoard();
        });
    </script>
